{
  "name": "playwright-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:all": "npx playwright test tests",
    "test-allure:all": "rm -rf ./allure-results && npm run test:all --reporter=line,allure-playwright",
    "test:smoke": "npx playwright test tests --grep @smoke",
    "test-allure:smoke": "rm -rf ./allure-results && npm run test:smoke --reporter=line,allure-playwright",
    "test:pcq-chromium": "npx playwright test --project=pcq-chromium",
    "test:pcq-firefox": "npx playwright test --project=pcq-firefox",
    "test:pcq-webkit": "npx playwright test --project=pcq-webkit",
    "test:pcq-chrome": "npx playwright test --project=pcq-chrome",
    "test:pcq-edge": "npx playwright test --project =pcq-edge",
    "test:pcq-iphone": "npx playwright test --project=pcq-iphone",
    "test:pcq-ipad": "npx playwright test --project=pcq-ipad",
    "test:pcq-head-test": "npx playwright test --project=pcq-head-test",
    "test:gh-checklist": "npx playwright test --grep @checklist --project=pcq-chromium",
    "test:checklist": "npx playwright test tests --grep @checklist",
    "test-allure:checklist": "rimraf ./allure-results && npx playwright test tests --grep @checklist --reporter=line,allure-playwright",
    "test-allure:gh-checklist": "rimraf ./allure-results && npx playwright test --grep @checklist --project=pcq-chromium --reporter=line,allure-playwright",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "npx allure open ./allure-report",
    "lint": "eslint \"page-objects/**/*.{js,cjs,mjs}\" \"tests/**/*.{js,cjs,mjs}\" \"playwright.config.js\"",
    "format:check": "prettier --check \"{data,page-objects,tests}/**/*.{js,json}\" playwright.config.js",
    "format": "prettier --write \"{data,page-objects,tests}/**/*.{js,json}\" playwright.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.0.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.5.0",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
